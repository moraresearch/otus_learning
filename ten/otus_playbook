---
- hosts: "{{host}}"
  become: yes
  tasks:
              - name: Install nginx
                yum: 
                  name: nginx
                  state: latest 
                notify: start nginx
              - name: port switch
                shell: "cp /vagrant/default.conf /etc/nginx/conf.d/ && sed -i 's/80/8080/' /etc/nginx/conf.d/default.conf && echo '=)' > /usr/share/nginx/html/index.html"
                register: shell_result 
  handlers: 
                - name: start nginx
                  systemd:
                    name: nginx
                    state: started
                    enabled: yes
